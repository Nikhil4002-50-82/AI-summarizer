{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "description": "Summarizes selected text using Hugging Face Model",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
